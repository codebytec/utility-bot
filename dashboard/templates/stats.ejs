<%- include('blocks/header', {bot, user, path}) %>
<div class="jumbotron">
    <div id="carouselContent" class="carousel slide" data-ride="carousel">
        <div class="carousel-inner" role="listbox">
            <div class="carousel-item active text-center">
                <h3>Servers and Users:</h3>
                <p><i class="fa fa-fw fa-server" aria-hidden="true"></i> Server Count: <%= stats.servers %></p>
                <p><i class="fa fa-fw fa-users" aria-hidden="true"></i> User Count: <%= stats.members %></p>
            </div>
            <div class="carousel-item text-center">
                <h3>Process Data:</h3>
                <p><i class="fa fa-fw fa-clock-o" aria-hidden="true"></i> Uptime: <%= stats.uptime %></p>
                <p><i class="fa fa-fw fa-tasks" aria-hidden="true"></i> Memory: <%= stats.memoryUsage %> MBs</p>
            </div>
            <div class="carousel-item text-center">
              <h3>Channels:</h3>
                <p><i class="fa fa-fw fa-hashtag" aria-hidden="true"></i> Text Channels: <%= stats.text %></p>
                <p><i class="fa fa-fw fa-microphone" aria-hidden="true"></i> Voice Channels: <%= stats.voice %></p>
            </div>
            <div class="carousel-item text-center">
                <h3>Versions:</h3>
                <p><i class="fa fa-fw fa-cogs" aria-hidden="true"></i> Discord.js Version: <%= stats.dVersion %></p>
                <p><i class="fa fa-fw fa-cog" aria-hidden="true"></i> Node.js Version: <%= stats.nVersion %></p>
            </div>
        </div>
        <a class="carousel-control-prev" href="#carouselContent" role="button" data-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="sr-only">Previous</span>
        </a>
        <a class="carousel-control-next" href="#carouselContent" role="button" data-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
        </a>
    </div>

